@using WebSiteProdutos.ViewModel
@model ProdutoViewModel
@{
    ViewData["Title"] = "Tipos de Produtos";
}

<div class="container">
    <div class="row">
        <div class="col">
            <h3>Mercado - Lista de Tipos de Produtos</h3>
        </div>
    </div>
    <div class="row">
        <div class="col">
            <a class="btn btn-primary" role="button" asp-controller="Produto" asp-action="CadastroTipoProduto">Cadastrar</a>
        </div>
    </div>
    <div class="row">
        <div class="col">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th scope="col">Código</th>
                        <th scope="col">Tipo</th>
                        <th scope="col">Ação</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.TipoProdutos != null && Model.TipoProdutos.Any())
                    {
                        @*Percorre por todas as linhas que retornaram do banco*@
                        @foreach (var item in Model.TipoProdutos)
                        {
                            <tr>
                                <th>@item.CODTIPO</th>
                                <td>@item.TIPO</td>
                                <td>
                                    <form asp-controller="Produto" asp-action="TipoProduto" asp-route-id="@item.CODTIPO" method="post">
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Você tem certeza que quer excluir o produto?');">Excluir</button>
                                    </form>
                                </td>

                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6" class="text-center">Não existe tipos de produtos cadastrados.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


